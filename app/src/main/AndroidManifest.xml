<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.project.esgi.fr.magnumhotel" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoomGestionActivity"
            android:label="@string/title_activity_room_gestion" >
        </activity>
        <activity
            android:name=".DetailRoomActivity"
            android:label="@string/title_activity_detail_room" >
        </activity>
        <activity
            android:name=".NewRoomActivity"
            android:label="@string/title_activity_new_room" >
        </activity>
        <activity
            android:name=".UpdateRoomActivity"
            android:label="@string/title_activity_update_room" >
        </activity>
    </application>

</manifest>
