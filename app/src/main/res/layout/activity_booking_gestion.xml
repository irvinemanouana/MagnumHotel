<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/empty_booking_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/add_button"
        android:drawableStart="@drawable/add_button"
        android:onClick="addNewBooking"
        android:background="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="@string/title_activity_add_booking"
        android:id="@+id/link_to_add_booking" />

    <ListView
        android:id="@+id/booking_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"/>

</LinearLayout>