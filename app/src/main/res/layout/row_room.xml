<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/room_cover"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:contentDescription="@string/cover_description"
        android:src="@drawable/default_journey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/RoomName"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            android:textAllCaps="true"
            android:text="@string/room_number"
            android:textColor="@color/black_900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nbperson"
            android:textColor="@color/black_900"
            android:textSize="@dimen/text_size"
            android:text="@string/customers_max" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceRoom"
            android:drawableLeft="@drawable/ic_action_price"
            android:textColor="@color/green_900"
            android:textSize="@dimen/text_size"
            android:text="@string/room_price"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>